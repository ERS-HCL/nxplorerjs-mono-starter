{
  "name": "nxplorerjs-micro-starter",
  "version": "1.0.0",
  "description": "Express Microservice Starter Mono Repo",
  "main": "index.js",
  "author": "Tarun Kumar Sukhu <tksukhu@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "bootstrap": "lerna bootstrap --stream",
    "test": "lerna run test --stream",
    "itest": "lerna run itest --stream",
    "start": "lerna run start --stream",
    "prepare": "lerna run prepare --stream",
    "clean": "lerna run clean --stream",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check":
      "npm run prettier:base -- --list-different \"packages/**/*.{ts,tsx}\"",
    "prettier:write":
      "npm run prettier:base -- --write \"packages/**/*.{ts,tsx}\"",
    "lint":
      "npm run tslint -- --force \"packages/**/*.{ts,tsx}\" -e \"**/lib/**\" -e \"**/build/**\"",
    "tslint": "tslint"
  },
  "devDependencies": {
    "awesome-typescript-loader": "4.0.1",
    "backpack-core": "^0.7.0",
    "lerna": "^2.11.0",
    "prettier": "^1.13.7",
    "rimraf": "^2.6.2",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-config-standard": "^7.0.0",
    "typedoc": "^0.11.1",
    "typedoc-webpack-plugin": "^1.1.4",
    "typescript": "^2.9.2"
  }
}
